mixin breadcrumbs(items)
    .breadcrumbs
        .container
            ul.breadcrumbs__list
                each item, ndx in items
                    li.breadcrumbs__item
                        a(href="" class="#{ndx == items.length-1 ? 'breadcrumbs__link_active' : ''}").breadcrumbs__link= item
+breadcrumbs(['Главная', 'Каталог'])